<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashok.android.cric_grap">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/teamlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name="cric_grab.ashok.android.cric_grap.Splash_Screen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="cric_grab.ashok.android.cric_grap.DashBoard"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="cric_grab.Navication_selection_class.cric_grap.Add_player"
            android:label="@string/addPlayer"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="cric_grab.Navication_selection_class.cric_grap.Score_Entry"
            android:label="@string/title_activity_score__entry"
            android:parentActivityName="cric_grab.ashok.android.cric_grap.DashBoard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cric_grab.ashok.android.cric_grap.DashBoard" />
        </activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.ScoreBoard"
            android:label="@string/title_activity_score_board"
            android:parentActivityName="cric_grab.Navication_selection_class.cric_grap.Score_Entry"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cric_grab.Navication_selection_class.cric_grap.Score_Entry" />
        </activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.Contactus"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.Over_selection"
            android:label="@string/title_activity_over_selection"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.Scorum"
            android:label="@string/title_activity_scorum"
            android:parentActivityName="cric_grab.ashok.android.cric_grap.Select_Over"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cric_grab.ashok.android.cric_grap.Select_Over" />
        </activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.Select_Over"
            android:label="Select Over"
            android:parentActivityName="cric_grab.ashok.android.cric_grap.DashBoard"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cric_grab.ashok.android.cric_grap.DashBoard" />
        </activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.History"
            android:label="@string/title_activity_history"
            android:parentActivityName="cric_grab.ashok.android.cric_grap.DashBoard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cric_grab.ashok.android.cric_grap.DashBoard" />
        </activity>
        <activity
            android:name="cric_grab.ashok.android.cric_grap.IndividualScoreView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
        <activity android:name="com.google.android.gms.ads.AdActivity">

        </activity>

        <meta-data
            android:name="com.google.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="cric_grab.ashok.android.cric_grap.PlayerAlone" />
    </application>

</manifest>
