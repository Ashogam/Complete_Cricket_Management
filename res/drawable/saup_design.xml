<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>

            <stroke
                android:width="1dp"
                android:color="@color/LightSeaGreen" />

            <gradient
                android:angle="0"
                android:centerColor="@color/GreenYellow"
                android:endColor="@color/AntiqueWhite"
                android:startColor="@color/AntiqueWhite"
                android:type="linear" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>



        </shape>

    </item>

    <item android:state_pressed="false">

        <shape>

            <stroke
                android:width="1dp"
                android:color="@color/GreenYellow" />

            <gradient
                android:angle="0"
                android:centerColor="@color/White"
                android:endColor="@color/White"
                android:startColor="@color/White"
                android:type="linear" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <corners
                android:radius="5dp"/>



        </shape>

    </item>
</selector>