<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearHead"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cric_grab.Navication_selection_class.cric_grap.Score_Entry"
    tools:showIn="@layout/activity_score__entry">

    <TextView
        android:id="@+id/txtErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hi There is no player. Please Add Players"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/Indigo"
        android:dividerHeight="2dp"
        android:fadeScrollbars="true"
        android:fadingEdge="vertical"
        android:footerDividersEnabled="true"
        android:scrollbarStyle="outsideOverlay"></ListView>


    <Button
        android:id="@+id/removeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Player"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:background="@drawable/removebutton"
        android:drawableRight="@android:drawable/ic_delete"/>

</LinearLayout>
